# Database - Supabase
# Connection pooler - Used by the application (get from Supabase Dashboard → Settings → Database → Connection Pooling)
DATABASE_URL="postgresql://postgres.YOUR_PROJECT_REF:YOUR_SUPABASE_PASSWORD@aws-0-us-east-1.pooler.supabase.com:6543/postgres?pgbouncer=true"

# Direct connection - Used for migrations (get from Supabase Dashboard → Settings → Database → Connection String)
DATABASE_MIGRATION_URL="postgresql://postgres:YOUR_SUPABASE_PASSWORD@db.YOUR_PROJECT_REF.supabase.co:5432/postgres"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Server
PORT=3001
NODE_ENV=development

# JWT Secret (change in production!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# API Keys (to be added later)
# ONESIGNAL_APP_ID=
# ONESIGNAL_API_KEY=

# Scraping Configuration
SCRAPING_INTERVAL_MINUTES=30
MAX_CONCURRENT_SCRAPERS=3

# Logging
LOG_LEVEL=info
